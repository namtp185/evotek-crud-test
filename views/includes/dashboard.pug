block content
  div.text-center
    form(id="loginForm" class="form-signin" method="POST")
      #error
        if error
          p.text-danger Error!!!

      - var h1Classes = ['h3', 'mb-3', 'font-weight-normal']
      h1(class=h1Classes) Please sign in

      //-input email
      label( for="username" class="sr-only") Username
      input(type="username" name="username" id="username" class="form-control" placeholder="Username" required autofocus)

      //-input password
      label(for="inputPassword" class="sr-only") Password
      input(type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required)

      //-remember Checkbox
      - var divClasses=['checkbox', 'mb-3'];
      div(class=divClasses)
        label
          input(type="checkbox" value="remember-me")
          span Remember me

      //-signIn button
      - var buttonClass=['btn', 'btn-lg', 'btn-primary', 'btn-block'];
      button(class=buttonClass type="submit") Sign in

      - var pClasses=['mt-5', 'mb-3', 'text-muted'];
